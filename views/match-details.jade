extends layout

block vars
  - var title = match._teamA.name + ' - '+match._teamB.name + " Â· " + match._event.name
  - var matchDate = moment(match.dateStart)
block content
  h2
    i.fa.fa-bullhorn
    = ' '
    = match._teamA.name
    = ' - '
    = match._teamB.name

  ul.match-infos
    li
      i.fa.fa-map-marker
      = ' '
      a(href='/event/'+event._id)= event.name
    li
      i.fa.fa-calendar
      = ' ' + matchDate.format('ddd DD MMM YYYY')
    li
      i.fa.fa-clock-o
      = ' ' + matchDate.format('HH:mm')
      small= matchDate.format('Z')

  if(isAdmin)
    a.link-admin.btn(href='#') You can administrate the match

    #admin-match
      #admin-header
        a.link-admin#admin-close(href='#') Close admin
      #admin-field Loading field


block append javascripts
  if(isAdmin)

    script.
      $('.link-admin').on('click',function(){
        $('#admin-match').toggle();
        return false;
      });

      var tchoukAdmin = $('#admin-field').tchoukr().get(0);

      tchoukAdmin.addListener(function(event){
        console.log("Listened",event);
      });